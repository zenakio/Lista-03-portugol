programa {
  funcao inicio() {
    inteiro numero
    escreva("informe um número: ")
    leia(numero)
    //Se o resto da divisão for zero o número é par
    se(numero%2==0){
    //Entra se for par
    escreva("O número é par.")
    }senao{
    //Entra se for impar
    escreva("O número é impar")
    }  
  }
}